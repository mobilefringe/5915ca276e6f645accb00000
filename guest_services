<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var prefix = get_prefix();
            var pages_json = prefix + "/pages/orchardtown-guest-services.json"
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_title').html(data.title.toUpperCase());
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            var guest_repo = getRepoDetailsByName("Guest Services Banner").images;
            var guest_image = guest_repo[0].image_url;
            if (guest_image) {
                $(".guest_banner").css("background-image", "url(" + guest_image + ")");
            }
            
            show_content();
        }
        loadMallDataCached(renderAll);
    });
</script>