<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var gallery_repo = getRepoDetailsByName("Image Gallery").images;
            if(gallery_repo != null){
                renderGeneral("#photo_container", "#photo_template", gallery_repo);
            }
            
            var image_repo = getRepoDetailsByName("Image Banner").images;
            var gallery_image = image_repo[0].image_url
            if (gallery_image) {
                $(".gallery_banner").css("background-image", "url(" + gallery_image + ")");
            }

            show_content();
        }
        
        loadMallDataCached(renderAll); 
    })
</script>