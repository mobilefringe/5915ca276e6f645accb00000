<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var promotions = getPromotionsList().sortBy(function(o){ return o.end_date });
            console.log("promotions", promotions);
            var categories = getStoreCategories();
            // renderGeneral('#category_container', '#category_template', categories);
            // renderGeneral('#mobile_cat_list', '#category_template2', categories);
            // $('#mobile_cat_list').prepend('<option value="all" selected >All Categories</option>');
            // show_cat_stores();
            var featured_promos = [];
            var published_promos = [];
            $.each(promotions, function(key, val) {
                var today = moment();
                var webDate = moment(val.show_on_web_date);
                if (today >= webDate) {
                    if (val.is_featured) {
                        featured_promos.push(val);
                    } else {
                        published_promos.push(val);
                    }
                } 
            });
            
            if(featured_promos.length > 0){
                console.log("featured_promos", featured_promos);
                renderPromotions("#featured_promos_container","#featured_promos_template", featured_promos, "Orchard Town Center");
            }
            
            if(published_promos.length > 0){
                renderPromotions("#promos_container","#promos_template", published_promos, "Orchard Town Center");
            } else {
                $('#no_promos').show()
            }
            show_content();
        }
		loadMallDataCached(renderAll); 
    })
</script>