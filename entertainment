<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var entertainment_repo = getRepoDetailsByName("Entertainment Banner").images;
            var entertainment_image = entertainment_repo[0].image_url
            if (entertainment_image) {
                $(".entertainment_banner").css("background-image", "url(" + entertainment_image + ")");
            }
            
            var specialty = getStoresListByCategoryID(5123).sortBy(function(o){ return o.name });
            renderStoreList('#store_list_container','#store_list_template', specialty, "stores");
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>