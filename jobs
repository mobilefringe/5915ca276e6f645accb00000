<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var jobs = getJobsList().sortBy(function(o){ return o.name});
            var published_jobs = [];
            $.each( jobs , function( key, val ){
                var today = moment();
                var webDate = moment(val.show_on_web_date);
                if (today >= webDate) {
                    published_jobs.push(val)
                } 
            });
            if(published_jobs.length > 0){
                renderJobs('#jobs_container', '#jobs_template', jobs, "Orchard Town Center");
            } else {
                $('#no_jobs').show()
            }
            
            var jobs_repo = getRepoDetailsByName("Jobs Banner").images;
            var jobs_image = jobs_repo[0].image_url
            if (jobs_image) {
                $(".jobs_banner").css("background-image", "url(" + jobs_image + ")");
            }
            
            show_content();
        }
		loadMallDataCached(renderAll); 
    })
</script>