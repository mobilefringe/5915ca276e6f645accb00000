<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var prefix = get_prefix();
            var retail_json = prefix + "/pages/orchardtown-retail-leasing.json"
            $.getJSON(retail_json).done(function(data) {
                $('#retail_page_title').html(data.title.toUpperCase());
                $('#retail_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
            
            var office_json = prefix + "/pages/orchardtown-office-leasing.json"
            $.getJSON(office_json).done(function(data) {
                $('#office_page_title').html(data.title.toUpperCase());
                $('#office_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
            
            var leasing_repo = getRepoDetailsByName("Leasing Banner").images;
            var leasing_image = leasing_repo[0].image_url
            if (leasing_image) {
                $(".leasing_banner").css("background-image", "url(" + leasing_image + ")");
            }
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>