<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var prefix = get_prefix();
            var pages_json = prefix + "/pages/orchardtown-contact-us.json"
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_title').html(data.title.toUpperCase());
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            
            var contact_repo = getRepoDetailsByName("Contact Us Banner").images;
            var contact_image = contact_repo[0].image_url
            if (contact_image) {
                $(".contact_banner").css("background-image", "url(" + contact_image + ")");
            }
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>